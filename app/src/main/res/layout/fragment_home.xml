<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="ðŸš€ Smoke-Free Progress"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:shadowColor="@color/white"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />


    <ProgressBar
        android:id="@+id/progress_days"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="16dp"
        android:layout_below="@id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:progress="75"
        android:backgroundTint="#8D8D8D"
        android:progressTint="#FFD700"
        android:scaleY="1.5" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_days"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Days Smoke-Free: 15"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/progress_money"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="300dp"
        android:layout_height="16dp"
        android:layout_below="@id/tv_days"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:progress="60"
        android:backgroundTint="#8D8D8D"
        android:progressTint="#32CD32"
        android:scaleY="1.5" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Money Saved: $100"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/black" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_craving"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/tv_money"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/red"
        android:text="Craving"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        app:cornerRadius="75dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_craving"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#8A2BE2"
        android:text="SHARE YOUR PROGRESS"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>